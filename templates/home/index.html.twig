{% extends 'base.html.twig' %}

{% block title %}
    Accueil Biblio
        
    
{% endblock %}

{% block body %}
    <h1>Livres disponibles</h1>

    <div class="d-flex flex-wrap">
        {% for livre in livres %}
            
            <div class="col-4 mb-3">
                <div class="card livre ">
                    <h4 class="card-header bg-primary text-light d-flex justify-content-between">
                        {{ livre.titre }}
                    </h4>

                    <div class="row  couverture">
                        <div class="col-4 d-flex align-items-center">
                            <img class="card-img p-1 miniature" src="" alt="pas de couverture">
                        </div>

                        <div class="col-8">
                            <div class="card-body">
                                <p class="card-text">
                                    De : 
                                    <strong>
                                        {{ livre.auteur }}
                                    </strong>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <a href="" class="card-link">
                            <i class="fa fa-book"></i>
                            Voir plus 
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}
